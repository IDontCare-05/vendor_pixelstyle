<selector android:enterFadeDuration="300" android:exitFadeDuration="300"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="true" android:alpha="?android:disabledAlpha">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="0.0dip" />
                    <solid android:color="?android:colorControlActivated" />
                    <size android:height="22.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:state_checked="false" android:alpha="?android:disabledAlpha">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="0.0dip" />
                    <solid android:color="@*android:color/switch_track_material" />
                    <size android:height="22.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="0.0dip" />
                    <solid android:color="?android:colorControlActivated" />
                    <size android:height="22.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_checked="false">
        <layer-list
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:gravity="fill_horizontal|center">
                <shape android:shape="rectangle">
                    <corners android:radius="0.0dip" />
                    <solid android:color="@*android:color/switch_track_material" />
                    <size android:height="22.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
